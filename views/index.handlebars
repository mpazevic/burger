<h1>EAT-DA-BURGER!! V1</h1>

<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">DEVOUR IT!!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>

<form method="POST" action="/index" class="button-size">
	<textarea type="text" name="burger_name"></textarea>
  <br>
	<button type="submit">Submit</button>
  <p id = "submit-text">Enter a burger that you want to devour, and press the "Submit" button!</p>
</form>
